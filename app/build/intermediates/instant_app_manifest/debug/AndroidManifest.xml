<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karson.android.dutydaycalculator"
    android:targetSandboxVersion="2"
    android:versionCode="7"
    android:versionName="1.5" >

    <uses-sdk
        android:minSdkVersion="28"
        android:targetSdkVersion="29" />

    <uses-permission-sdk-23 android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission-sdk-23 android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:testOnly="true" >
        <activity
            android:name="com.karson.android.dutydaycalculator.OutputActivity"
            android:label="@string/app_name"
            android:theme="@android:style/ThemeOverlay.Material.Dark" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.karson.android.dutydaycalculator.EditorListActivity"
            android:label="@string/edit_label"
            android:theme="@android:style/ThemeOverlay.Material.Dark" />
        <activity
            android:name="com.karson.android.dutydaycalculator.ProfileEditorActivity"
            android:label="@string/edit_label"
            android:theme="@android:style/ThemeOverlay.Material.Dark" />
        <activity
            android:name="com.karson.android.dutydaycalculator.CalculatorActivity"
            android:icon="@drawable/calc_icon_dark"
            android:label="Time Difference Calculator"
            android:theme="@android:style/Theme.Material.Dialog" />
    </application>

</manifest>